{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./lib",
    "target": "es5",
    "module": "ESNext",
    "allowJs": false,
    "checkJs": false,
    "jsx": "react",
    "declaration": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "lib": ["esnext", "dom"]
  },
  // "include": [
  //   "./src/**/*",
  //   "./interface/*"
  // ],
  "exclude": ["node_modules", "examples", "docs", "lib", "build", "dist"]
}
